{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "types"],
    "moduleResolution": "node",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
